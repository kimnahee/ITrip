<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.itrip.prj.payform.mapper.PayFormMapper">

<select id="payCount" resultType="int">
	SELECT NVL(COUNT(*),1)
	 FROM PAYFORM
</select>

<insert id="clPayformInsert">
	INSERT INTO PAYFORM VALUES(#{merchant_uid},#{name},#{amount},#{member_id},'CLASS',#{no},sysdate,null,null,null)
</insert>

<insert id="coPayformInsert">
	INSERT INTO PAYFORM VALUES(#{merchant_uid},#{name},#{amount},#{member_id}, #{category} ,#{no},sysdate, #{conday},#{beginTime},#{beginTime})
</insert>


</mapper>