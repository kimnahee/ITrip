<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.itrip.prj.community.mapper.CommunityMapper">

	<select id="communityList" resultType="co.itrip.prj.community.service.CommunityVO">
		select com_no,
			   title,
			   content,
			   member_id,
			   dt,
			   hit,
			   attach,
			   attach_dir,
			   ctgry
		from comboard
		order by com_no
	</select>
	
	<select id="selectCommunity" resultType="co.itrip.prj.community.service.CommunityVO">
		select *
		from comboard
		where com_no=#{comNo}
	</select>
	
	<select id="studyList" resultType="co.itrip.prj.community.service.CommunityVO">
		select *
		from comboard
		where ctgry='스터디'
	</select>
</mapper>